<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <TextView
            android:text="2017038012 이시헌"
            android:layout_span="5"
            ></TextView>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/Edit1"
            android:layout_span="5"
            android:hint="숫자 1 입력"
            ></EditText>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/Edit2"
            android:layout_span="5"
            android:hint="숫자 2 입력"
            ></EditText>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/BtnNum0"
            android:text="0"
            ></Button>
        <Button
            android:id="@+id/BtnNum1"
            android:text="1"
            ></Button>
        <Button
        android:id="@+id/BtnNum2"
        android:text="2"
            ></Button>
        <Button
        android:id="@+id/BtnNum3"
        android:text="3"
            ></Button>
        <Button
        android:id="@+id/BtnNum4"
        android:text="4"
            ></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/BtnNum5"
            android:text="5"
            ></Button>
        <Button
            android:id="@+id/BtnNum6"
            android:text="6"
            ></Button>
        <Button
            android:id="@+id/BtnNum7"
            android:text="7"
            ></Button>
        <Button
            android:id="@+id/BtnNum8"
            android:text="8"
            ></Button>
        <Button
            android:id="@+id/BtnNum9"
            android:text="9"
            ></Button>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/BtnAdd"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="더하기"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnMin"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="빼기"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnTim"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="곱하기"
            ></Button>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/BtnDiv"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="나누기"
            ></Button>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/TextResult"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="계산 결과"
            android:textColor="#FF0000"
            android:textSize="20dp"
            ></TextView>
    </TableRow>


</TableLayout>